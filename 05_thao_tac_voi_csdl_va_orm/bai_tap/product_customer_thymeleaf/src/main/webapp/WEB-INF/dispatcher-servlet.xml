<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <context:component-scan base-package="com.codegym"/>

    <mvc:annotation-driven/>

    <bean class="org.thymeleaf.spring4.templateresolver.SpringResourceTemplateResolver" id="viewResolver">
        <property value="/WEB-INF/views/" name="prefix"/>
        <property value=".html" name="suffix"/>
    </bean>
    <bean class="org.thymeleaf.spring4.SpringTemplateEngine" id="engine">
        <property name="templateResolver" ref="viewResolver"/>
    </bean>
    <bean class="org.thymeleaf.spring4.view.ThymeleafViewResolver">
        <property name="templateEngine" ref="engine"/>
    </bean>
</beans>
